<%- include('header') %>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="./images/AdobeStock_356591591_Editorial_Use_Only-1-fotor-20230727182347.jpg" class="d-block w-100" alt="Carousel Image 1" style="width: 100%; height: 550px;">
    </div>
    <div class="carousel-item">
      <a href="/99Book"><img src="./images/Books-Under-Rs-99 (1)-fotor-20230727183835.jpg" class="d-block w-100" alt="Carousel Image 2" style="width: 100%; height: 550px;"></a>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon " aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container mt-5">
  <div class="container mt-5">
      <div class="row">
        <% books.forEach((book) => { %>
        <div class="col-md-4">
          <div class="card mb-4">
            <img src="<%= book.bookImages[0] %>" class="card-img-top img-fluid" style="height: 300px;" alt="<%= book.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text text-success">â‚¹<%= book.price %></p>
              <a href="/viewDetails/<%= book._id %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    
      <div class="row justify-content-center mt-4">
        <div class="col-md-6 text-center">
          <a href="/sell" class="btn btn-success btn-lg">Sell Your Books</a>
        </div>
      </div>
    </div>
</div>

  

<%- include('footer') %>
